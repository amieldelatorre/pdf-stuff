<MyGridLayout>

    path:path
    output_file_name:output_file_name
    search_string:search_string

    GridLayout:
        size: root.width, root.height
        cols:1
        row_force_default:True
        row_default_height:72
        col_force_default:True
        col_default_width:100
        padding: 20

        GridLayout:
            cols: 2
            row_force_default:True
            row_default_height:30
            col_force_default:True
            col_default_width:130

            Label:
                text: "Path"
            TextInput:
                id: path
                multiline: False
                size_hint_x:None
                width:500

            Label:
                text: "Output File Name"
            TextInput:
                id: output_file_name
                multiline: False
                size_hint_x:None
                width:500

            Label:
                text: "Search"
            TextInput:
                id: search_string
                multiline: False
                size_hint_x:None
                width:500

        Button:
            text: "Submit"
            font_size: 20
            size_hint_y:None
            height:30
            size_hint_x:None
            width:100
            on_press: root.press()


